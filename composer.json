{
    "name": "helis/settings-manager-bundle",
    "description": "Provides a nice way to define variables and inject them into application parts",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Helis LT",
            "email": "info@helis.lt"
        }
    ],
    "autoload": {
        "psr-4": {
            "Helis\\SettingsManagerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helis\\SettingsManagerBundle\\Tests\\": "tests/src/",
            "Helis\\SettingsManagerBundle\\Benchmarks\\": "benchmarks/",
            "App\\": "tests/bundle/"
        },
        "classmap": ["tests/app/AppKernel.php"]
    },
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "doctrine/collections": "^1.5",
        "myclabs/php-enum": "^1.5",
        "ocramius/proxy-manager": "^2.1",
        "symfony/config": "^3.4|^4.3",
        "symfony/console": "^3.4|^4.3",
        "symfony/dependency-injection": "^3.4|^4.3",
        "symfony/form": "^3.4|^4.3",
        "symfony/http-foundation": "^3.4|^4.3",
        "symfony/http-kernel": "^3.4|^4.3",
        "symfony/options-resolver": "^3.4|^4.3",
        "symfony/proxy-manager-bridge": "^3.4|^4.3",
        "symfony/serializer": "^3.4|^4.3",
        "symfony/validator": "^3.4|^4.3",
        "symfony/yaml": "^3.4|^4.3"
    },
    "require-dev": {
        "acelaya/doctrine-enum-type": "^2.0",
        "aws/aws-sdk-php": "^3.48",
        "doctrine/doctrine-bundle": "^1.8",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/orm": "^2.6",
        "enqueue/enqueue": "^0.8.29",
        "friendsofphp/php-cs-fixer": "^2.11",
        "friendsofsymfony/jsrouting-bundle": "^2.1",
        "knplabs/knp-menu-bundle": "^2.2",
        "liip/functional-test-bundle": "^4.0.0",
        "liip/test-fixtures-bundle": "^1.0.0",
        "paragonie/paseto": "^1.0",
        "phpbench/phpbench": "^0.15.0",
        "phpstan/phpstan": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpunit/phpunit": "^7.2",
        "predis/predis": "^1.1",
        "symfony/asset": "^3.4|^4.3",
        "symfony/framework-bundle": "^3.4|^4.3",
        "symfony/monolog-bundle": "~3.4.0",
        "symfony/phpunit-bridge": "^3.4|^4.3",
        "symfony/security-bundle": "^3.4|^4.3",
        "symfony/stopwatch": "^3.4|^4.3",
        "symfony/twig-bundle": "^3.4|^4.3",
        "symfony/web-profiler-bundle": "^3.4|^4.3",
        "symfony/lock": "^3.4|^4.3"
    },
    "suggest": {
        "symfony/cache": "Required by some settings providers",
        "symfony/lock": "Required by some settings providers",
        "symfony/monolog-bundle": "Allows more advanced logging",
        "doctrine/orm": "Allows to use orm setting provider",
        "acelaya/doctrine-enum-type": "Required if using doctrine orm, for persisting enum's",
        "paragonie/past": "Allows to use cookie setting provider. php >=7.2 for better performance",
        "friendsofsymfony/jsrouting-bundle": "Required to fully use provided user interface",
        "knplabs/knp-menu-bundle": "Required to fully use provided user interface",
        "aws/aws-sdk-php": "Allows to use aws ssm setting provider",
        "enqueue/enqueue": "Allows to use consumption extension for warming up settings during messages",
        "predis/predis": "Allows to use decorating predis settings provider"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "install-phpcs": "test -f php-cs-fixer.phar || wget https://cs.sensiolabs.org/download/php-cs-fixer-v2.phar -O php-cs-fixer.phar",
        "phpcs": [
            "@install-phpcs",
            "@php php-cs-fixer.phar fix --dry-run --diff -v --allow-risky=yes --ansi"
        ],
        "phpcs-fix": [
            "@install-phpcs",
            "@php php-cs-fixer.phar fix --diff -v --allow-risky=yes --ansi"
        ],
        "phpstan": "phpstan analyse --ansi"
    }
}
